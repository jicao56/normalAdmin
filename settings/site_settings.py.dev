# -*- coding: utf-8 -*-


# 网站配置类
class SiteSettings(object):

    _instance = None

    web_debug = False

    # 接口ip
    web_host = None

    # 接口端口
    web_port = None

    # 接口启动进程数
    web_process_num = 1

    def __new__(cls, *args, **kwargs):
        if cls._instance is None:
            cls._instance = super().__new__(cls)
        return cls._instance


# 系统网站配置类
class SystemSiteSettings(SiteSettings):

    web_debug = True

    # 接口ip
    web_host = '0.0.0.0'

    # 接口端口
    web_port = 9000

    # 接口启动进程数
    web_process_num = 1


settings_site_system = SystemSiteSettings()

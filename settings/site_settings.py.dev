# -*- coding: utf-8 -*-


# 网站配置类
class SiteSettings(object):

    _instance = None

    web_debug = False

    # 接口ip
    web_host = None

    # 接口端口
    web_port = None

    # 接口启动进程数
    web_process_num = 1

    def __new__(cls, *args, **kwargs):
        if cls._instance is None:
            cls._instance = super().__new__(cls)
        return cls._instance


# 系统网站配置类
class SystemSiteSettings(SiteSettings):

    web_debug = True

    # 接口ip
    web_host = '0.0.0.0'

    # 接口端口
    web_port = 9000

    # 接口启动进程数
    web_process_num = 1

    # 跨域参数
    allow_origins = ['*']
    allow_credentials = True
    allow_methods = ["GET", "POST", "PUT", "DELETE"]
    allow_headers = ["*"]

    # 静态文件
    # 静态文件路径（基于当前项目路径往下）
    static_path = '/statics'
    static_dir = 'statics'
    static_name = 'static'


settings_site_system = SystemSiteSettings()
